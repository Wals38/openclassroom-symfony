{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %}
	{{ parent() }} - Accueil
{% endblock %}

{% block ocplatform_body %}
	<h3>
		Liste des annonces pour le mois en cours :
	</h3>
	<ul>
		{% for advert in listAdverts | reverse %}
			<li>
				Le <em>{{advert.date | date('d/m/Y')}}</em>, par <strong>{{advert.author}}</strong> :<br>
				<a href="{{ path('oc_platform_view', {'id': advert.id}) }}">
					{{advert.title}}
				</a>
			</li>
		{% else %}
			<li>
				<strong>Il n'y a pour l'instant aucune annonce ! :/</strong>
			</li>
		{% endfor %}
	</ul>
{% endblock %}
